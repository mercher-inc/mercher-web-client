%h1.title
  {{ product.title }}
  %span.subtitle{ng: {if: "product.subtitle"}}
    \/ {{ product.subtitle }}
.price-info{ng: {if: "product.price"}}
  %span.price {{ product.price | currency }}
  %span.availability {{ product.availability | uppercase }}
.rating
  .mc-rating{ng: {if: "product.rating"}, rating: "product.rating"}
  {{ product.rating }}
.shop-info
  From:
  %a{ui: {sref: "shop({ shopId: product.shop.id })"}}
    {{ product.shop.title }}
.description
  {{ product.description }}
.footer
