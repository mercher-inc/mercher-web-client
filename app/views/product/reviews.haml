%h1.title Reviews

.review{ng: {repeat: "productReview in productReviews"}}
  .avatar
    %img{mc: {image: "productReview.user.image"}, size: "xs", height:"100"}
  .date
    .day {{ productReview.createdAt | date : 'MMM dd' | uppercase }}
    .year {{ productReview.createdAt | date : 'yyyy' | uppercase }}
  .rating
    .mc-rating{rating: "productReview.rating"}
  .description
    %h3.name
      {{ productReview.user.firstName }} {{ productReview.user.lastName }}
    %p.comment
      {{ productReview.comment }}