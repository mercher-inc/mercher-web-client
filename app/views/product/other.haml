.shop-info
  %img.logo{mc: {image: "shop.image"}, size: "xs", ng: {if: "shop.image && shop.image.key"}}
  %h3.title {{ shop.title }}
  %h4.subtitle {{ shop.title }}

.products-list
  .product-card{ng: {repeat: "product in products"}}
    .images
      %img.image{mc: {image: "productImage.image"}, size: "m", ng: {repeat: "productImage in product.productImages"}}
    .description
      %span.title
        {{ product.title }}
      %span.price{mc: {custom: {color: "mainColor"}}}
        {{ product.price | currency }}